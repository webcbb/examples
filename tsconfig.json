{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "es2015",
    "target": "es2019",
    "strict": true,
    "experimentalDecorators": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "lib": [
      "dom",
      "es2019"
    ],
    "types": [
      "node",
      "vite/client"
    ],
    "sourceMap": true,
    "newLine": "LF"
  },
  "include": [
    "src/**/*.ts"
  ]
}
